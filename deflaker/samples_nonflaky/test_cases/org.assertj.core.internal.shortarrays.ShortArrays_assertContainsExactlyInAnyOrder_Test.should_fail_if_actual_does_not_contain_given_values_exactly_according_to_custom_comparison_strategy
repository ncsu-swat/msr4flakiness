@Test
public void should_fail_if_actual_does_not_contain_given_values_exactly_according_to_custom_comparison_strategy() {
    AssertionInfo info = someInfo();
    short[] expected = { 6, -8, 20 };
    try {
        arraysWithCustomComparisonStrategy.assertContainsExactlyInAnyOrder(info, actual, expected);
    } catch (AssertionError e) {
        verify(failures).failure(info, shouldContainExactlyInAnyOrder(actual, expected, newArrayList((short) 20), newArrayList((short) 10), absValueComparisonStrategy));
        return;
    }
    failBecauseExpectedAssertionErrorWasNotThrown();
}
