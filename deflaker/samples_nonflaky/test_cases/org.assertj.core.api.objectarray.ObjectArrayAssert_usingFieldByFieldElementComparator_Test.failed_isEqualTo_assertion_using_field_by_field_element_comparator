@Test
public void failed_isEqualTo_assertion_using_field_by_field_element_comparator() {
    Foo[] array1 = array(new Foo("id", 1));
    Foo[] array2 = array(new Foo("id", 2));
    assertThatExceptionOfType(AssertionError.class).isThrownBy(() -> assertThat(array1).usingFieldByFieldElementComparator().isEqualTo(array2)).withMessage(format("%nExpecting:%n" + " <[Foo(id=id, bar=1)]>%n" + "to be equal to:%n" + " <[Foo(id=id, bar=2)]>%n" + "when comparing elements using field/property by field/property comparator on all fields/properties%n" + "Comparators used:%n" + "- for elements fields (by type): {Double -> DoubleComparator[precision=1.0E-15], Float -> FloatComparator[precision=1.0E-6]}%n" + "- for elements (by type): {Double -> DoubleComparator[precision=1.0E-15], Float -> FloatComparator[precision=1.0E-6]}%n" + "but was not."));
}
